package task2;

public class Student {

	String name;
	String subject; // ñïåöèàëíîñò
	double grade; // óñïåõ
	private int yearInCollåge; // êóðñ
	byte age; // ãîäèíè íà ñòóäåíòà
	boolean isDegree; // äàëè å çàâúðøèë èëè íå
	double money; // ïàðè îò ñòèïåíäèè

	public Student() {
		this.grade = 4.0;
		this.yearInCollåge = 1;
		this.isDegree = false;
		this.money = 0;
	}

	public Student(String name, String subject, byte age) {
		this();
		this.name = name;
		this.subject = subject;
		this.age = age;
	}

	void upYear() {
		if (isDegree) {
			System.out.println("Ñòóäåíòúò å çàâúðøèë.");
			return;
		} else {
			yearInCollåge++;
			if (yearInCollåge == 4) {
				isDegree = true;
			}
		}
	}

	void setYearInCollege(int yearInCollåge) {
		if (yearInCollåge > 1 && yearInCollåge < 5) {
			this.yearInCollåge = yearInCollåge;
		}
	}

}
