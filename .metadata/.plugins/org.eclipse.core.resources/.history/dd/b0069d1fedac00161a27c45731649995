		lili.grade = 5.02;

		Student zdravko = new Student("Zdravko", "IT", 30);
		zdravko.grade = 5.89;

		Student petq = new Student("Petq", "IT", 28);
		petq.grade = 5.75;

		Student vesko = new Student("Vesko", "IT", 18);

		Student vqra = new Student("Vqra", "IT", 19);

		StudentGroup sGroup = new StudentGroup("IT");

