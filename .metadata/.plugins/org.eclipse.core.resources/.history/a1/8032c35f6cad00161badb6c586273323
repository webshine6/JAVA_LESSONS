package naselo;

public class Sheep {

	static Peasant ovchar;

	private static final double SREDEN_MLEKONADOI = 1.5; // <-- константа  (static final)

	String name;
	int age;
	boolean hasZvunche;

	void makeSound() {
		System.out.println("BeeeEeeEe");

		if (hasZvunche) {
			System.out.println("Dzun-dzun");
		}
	}

	static int kolkoPuloveraMogaDaNapravq(int broiOvche) {
		return (int) (broiOvche * SREDEN_MLEKONADOI);
	}
}
